                                                        \addplot[firstcurvestyle,domain=1.1:2] {1/(x - 1)^2};
                                                        \addplot[asymptote,rightarrow] coordinates {(1,1) (1,100)};
                                                    \end{axis}
                                                \end{tikzpicture}
                                            
              </latex-image>
            </image>
          </figure>
