      <tabular>
        <row bottom="medium">
          <cell>
            <m>h</m>
          </cell>
          <cell>
            <m>\frac{f(1+h)-f(1)}{h}</m>
          </cell>
        </row>
        <row>
          <cell>
            <m>-0.5</m>
          </cell>
          <cell>
            <m>9.25</m>
          </cell>
        </row>
        <row>
          <cell>
            <m>-0.1</m>
          </cell>
